{
    "name": "stephencoduor/mpesa",
    "type": "library",
    "description": "Mpesa daraja api library",
    "keywords": [
        "codeigniter mpesa library",
        "gateway",
        "mpesa",
        "paybill",
        "lipa na mpesa",
        "reverse money",
        "customer to business",
        "bussines to bussines"
    ],
    "homepage": "https://github.com/stephencoduor/mpesa",
    "license": "MIT",
    "authors": [
        {
            "name": "Stephen Oduor",
            "email": "stephencoduor@gmail.com",
            "homepage": "https://github.com/stephencoduor/mpesa"
        }
    ],
    "autoload": {
        "psr-4": {
            "Stephencoduor\\Mpesa\\": "src"
        }
    },

    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": ">=7.2.0",
         "ext-curl": "*",
        "ext-dom": "*",
        "ext-hash": "*",
        "ext-xmlwriter": "*"
    },

    "extra": {
        "laravel": {
            "providers": [
                "Stephencoduor\\Mpesa\\MpesaServiceProvider"
            ],
            "aliases": {
                "Mpesa": "Stephencoduor\\Mpesa\\Facades\\Mpesa"
            }
        }
    },

    "extra": {
        "branch-alias": {
            "dev-master": "v1.1-dev"
        }
    },
    "minimum-stability": "stable"
}
